<h4>Your Cart</h4>
<p>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.each do |order| %>
      <% @item = Item.find(order.item.id) %>
        <tr>
          <td><%= @item.name %></td>
          <td><%= @item.price %></td>
          <td><%= link_to 'Show', @item %></td>
          <td><%= link_to 'Remove', "/order/#{@item.id}", method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p>
<%= link_to 'Checkout', '/checkout' %>
</p>