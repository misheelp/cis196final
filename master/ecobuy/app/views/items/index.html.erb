
  <div class="card-group" style="margin: 85px;">
  <p id="notice"><%= notice %></p>

    <% @items.each do |item| %>
    <div class="card" style="margin: 22px;height: 480px;">
    <%=link_to(image_tag(item.url, class: "card-img-top w-100 d-block", style: "height: 380px;" ), item)%>      
    <div class="card-body" style="height:500px">
          <h6 class="card-title" style="height: 8px;width: 205px;font-size: 19px;font-family: Asap, sans-serif;">
          <%=item.name%>
          </h6>
          <%=item.price%>  
            <%if logged_in? && !current_user.items.include?(item)%>
          <%= link_to 'Add to cart', "items/#{item.id}/buy", class:"card-link", method: :post %>
            <%end%>
      </div>
    </div>
    <% end %>
<br>

